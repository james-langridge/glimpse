# --- Required ---
ADMIN_PASSWORD=change-me-in-production
SESSION_SECRET=change-me-32-chars-minimum-xxxxx
SITE_URL=http://localhost:3000

# --- Docker Compose only ---
# Used to create the PostgreSQL database and build DATABASE_URL automatically.
# Not needed if you set DATABASE_URL directly (e.g. non-Docker setups).
POSTGRES_PASSWORD=change-me-in-production

# --- Non-Docker only ---
# When using Docker Compose, DATABASE_URL is built from POSTGRES_PASSWORD above.
DATABASE_URL=postgresql://localhost:5432/glimpse
PHOTO_STORAGE_PATH=/data/photos

# --- Optional ---
CLEANUP_SECRET=change-me-in-production
CLEANUP_DAYS=30
